
.el-dropdown
  font-size: 16px
  color: #fff
.el-dropdown-menu
  background-color: $web-sys-menu-bg-color
  border: 1px solid $web-sys-menu-bg-color
.el-dropdown-menu__item
  color: $web-sys-menu-text-color
.el-dropdown-menu__item:focus, .el-dropdown-menu__item:not(.is-disabled):hover
  background-color: $web-sys-menu-hover-bg-color
  color: $web-sys-menu-hover-text-color

button, html [type="button"], [type="reset"], [type="submit"]
  outline: none 

.el-textarea
  padding-bottom: 8px // 為了表單驗證的錯誤顯示時不會壓疊到

.el-dialog
  img 
    max-width: 300px

.el-input.is-disabled .el-input__inner,
.el-textarea.is-disabled .el-textarea__inner
  color: #666


.el-form--label-top 
  .el-form-item--small.el-form-item
    margin-bottom: 5px
  .el-form-item__label
    padding-bottom: 0
    margin-bottom: 3px
    line-height: 30px


table td 
  &.red 
    color: #d93535fa


.el-button.history-active
    color: #108EE9;
    border-color: #b7ddf8;
    // background-color: #e7f4fd;


.CountBox
  display: flex
  justify-content: flex-end
  > div 
    font-size: 12px
    color: #333
    padding: 5px 10px
    margin: 10px 0
    margin-left: 5px
    &.count 
      background-color: #ddd
    &.total 
      background-color: #eee



.pointer 
  cursor: pointer
i 
  outline: none

.el-dropdown-menu--small .el-dropdown-menu__item
  font-size: 14px 
  line-height: 35px
  width: 120px
  // display: flex 
  // justify-content: space-around
  .sys-menu-icon
    margin-right: 5px



.errorMsg
  color: #ff4848
  font-size: 13px
form 
  .errorMsg 
    margin-bottom: 0


.el-form.el-form--label-top
  .el-form-item__error
    position: static
    line-height: 18px
    label 
      margin-bottom: 0
      
.el-form.el-form--label-left
  .el-form-item__error
    margin-top: -5px